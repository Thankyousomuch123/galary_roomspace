<h1>Your Albums</h1>

<%= link_to 'New Photo Album', new_album_path(album_type: 'photo'), class: 'btn btn-primary' %>
<%= link_to 'New Video Album', new_album_path(album_type: 'video'), class: 'btn btn-secondary' %>

<h2>Photo Albums</h2>
<div class="album-list">
  <% @albums.where(album_type: 'photo').each do |album| %>
    <div class="album-item">
      <%= link_to album_path(album), class: 'album-link' do %>
        <div class="album-avatar">
          <%= image_tag album.avatar, width: "100px" if album.avatar.attached? %>
        </div>
        <div class="album-info">
          <span class="album-name"><%= album.name %></span>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<h2>Video Albums</h2>
<div class="album-list">
  <% @albums.where(album_type: 'video').each do |album| %>
    <div class="album-item">
      <%= link_to album_path(album), class: 'album-link' do %>
        <div class="album-avatar">
          <%= image_tag album.avatar, width: "100px" if album.avatar.attached? %>
        </div>
        <div class="album-info">
          <span class="album-name"><%= album.name %></span>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<style>
  .album-list {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    margin-top: 20px;
  }

  .album-item {
    width: 200px;
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    text-align: center;
    transition: transform 0.3s ease;
  }

  .album-item:hover {
    transform: scale(1.05);
  }

  .album-avatar img {
    width: 100%;
    height: auto;
    border-bottom: 1px solid #ddd;
  }

  .album-info {
    padding: 10px;
  }

  .album-name {
    display: block;
    font-weight: bold;
    font-size: 18px;
    color: #333;
    margin-top: 10px;
  }

  .btn {
    margin-bottom: 20px;
    display: inline-block;
    padding: 10px 20px;
    font-size: 16px;
    font-weight: bold;
    text-decoration: none;
    color: #fff;
    border-radius: 5px;
    text-align: center;
  }

  .btn-primary {
    background-color: #007bff;
  }

  .btn-secondary {
    background-color: #6c757d;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }
</style>
