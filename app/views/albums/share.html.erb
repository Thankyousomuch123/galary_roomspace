<h1>Share Album: <%= @album.name %></h1>

<%= form_with(url: update_share_album_path(@album), method: :patch, local: true) do |form| %>
  <div>
    <h3>Select Users to Share With:</h3>
    <% @users.each do |user| %>
      <div>
        <%= check_box_tag 'shared_user_ids[]', user.id, @album.shared_users.include?(user) %>
        <%= user.email %>
      </div>
    <% end %>
  </div>
  <div>
    <%= form.submit 'Update Sharing' %>
  </div>
<% end %>
