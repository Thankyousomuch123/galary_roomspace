<h1><%= @album.name %></h1>
<%= link_to 'Edit', edit_album_path(@album) %>
<p>
  <strong>Avatar:</strong>
  <% if @album.avatar.attached? %>
    <%= image_tag @album.avatar, width: "200px" %>
    <%= button_to 'Remove Avatar', purge_avatar_album_path(@album), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</p>

<h2>Photos</h2>
<%= link_to 'Add Photo', new_album_photo_path(@album) %>
<%= link_to 'Share Album', share_album_path(@album) %>
<ul>
  <% @album.photos.each do |photo| %>
    <li>
      <%= image_tag photo.image if photo.image.attached? %>
      <p><%= photo.title %></p>
      <%= link_to 'Share Photo', share_album_photo_path(@album, photo) %>
      <% if photo.album.user == current_user %>
			  <%= button_to 'Delete Photo', album_photo_path(@album, photo), method: :delete, data: { confirm: 'Are you sure you want to delete this photo?' } %>
			<% end %>
    </li>
  <% end %>
</ul>
