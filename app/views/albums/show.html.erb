<h1><%= @album.name %></h1>

<div class="album-actions">
  <%= link_to 'Edit Album', edit_album_path(@album), class: 'btn btn-edit' %>
  <%= link_to 'Back to Albums', albums_path, class: 'btn btn-back' %>
</div>

<div class="album-details">
  <p>
    <strong>Avatar:</strong>
    <% if @album.avatar.attached? %>
      <div class="avatar-container">
        <%= image_tag @album.avatar, class: 'album-avatar' %>
        <%= button_to 'Remove Avatar', purge_avatar_album_path(@album), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-remove-avatar' %>
      </div>
    <% else %>
      <span>No avatar uploaded.</span>
    <% end %>
  </p>
</div>

<h2>Photos</h2>
<div class="photo-actions">
  <%= link_to 'Add Photo', new_album_photo_path(@album), class: 'btn btn-add-photo' %>
  <%= link_to 'Share Album', share_album_path(@album), class: 'btn btn-share-album' %>
</div>

<div class="photo-list">
  <% @album.photos.each do |photo| %>
    <div class="photo-item">
      <%= image_tag photo.image, class: 'photo-image' if photo.image.attached? %>
      <p class="photo-title"><%= photo.title %></p>
      <div class="photo-actions">
        <%= link_to 'Share Photo', share_album_photo_path(@album, photo), class: 'btn btn-share-photo' %>
        <% if photo.album.user == current_user %>
          <%= button_to 'Delete Photo', album_photo_path(@album, photo), method: :delete, data: { confirm: 'Are you sure you want to delete this photo?' }, class: 'btn btn-delete-photo' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<style>
  h1 {
    font-size: 32px;
    color: #333;
    margin-bottom: 20px;
  }

  .album-actions {
    margin-bottom: 30px;
  }

  .album-details {
    margin-bottom: 40px;
  }

  .avatar-container {
    position: relative;
    display: inline-block;
    margin-bottom: 20px;
  }

  .album-avatar {
    width: 200px;
    height: auto;
    border: 2px solid #ddd;
    border-radius: 8px;
  }

  .photo-list {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
  }

  .photo-item {
    width: 150px;
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    text-align: center;
    padding: 10px;
  }

  .photo-image {
    width: 100%;
    height: auto;
    border-bottom: 1px solid #ddd;
  }

  .photo-title {
    font-size: 14px;
    color: #666;
    margin-top: 10px;
    margin-bottom: 10px;
  }

  .album-actions .btn, .photo-actions .btn {
    display: inline-block;
    font-size: 16px;
    font-weight: bold;
    padding: 10px 20px;
    text-align: center;
    text-decoration: none;
    border-radius: 5px;
    margin-right: 10px;
    margin-bottom: 10px;
  }

  .btn-edit {
    background-color: #28a745;
    color: #fff;
  }

  .btn-back {
    background-color: #6c757d;
    color: #fff;
  }

  .btn-remove-avatar, .btn-delete-photo {
    background-color: #dc3545;
    color: #fff;
  }

  .btn-add-photo, .btn-share-album, .btn-share-photo {
    background-color: #007bff;
    color: #fff;
  }

  .btn:hover {
    opacity: 0.9;
  }
</style>
