<div class="post-details-container">
  <h1>Post Details</h1>

  <div class="post-detail">
    <strong>Title:</strong>
    <p><%= @post.title %></p>
  </div>

  <div class="post-detail">
    <strong>Avatar:</strong>
    <% if @post.avatar.attached? %>
      <div class="avatar-section">
        <%= image_tag @post.avatar, width: "200px", class: "avatar-image" %>
        <%= link_to "Delete avatar", purge_avatar_post_path(@post), method: :delete, class: "action-link delete-link" %>
      </div>
    <% else %>
      <p>No avatar attached</p>
    <% end %>
  </div>

  <div class="post-detail">
    <strong>Images:</strong>
    <% if @post.images.attached? %>
      <div class="images-section">
        <% @post.images.each do |attachment| %>
          <div class="attachment">
            <% if attachment.image? %>
              <%= image_tag attachment, width: "200px", class: "attachment-image" %>
            <% elsif attachment.audio? %>
              <audio controls>
                <source src="<%= rails_blob_url(attachment) %>" type="<%= attachment.content_type %>"/>
              </audio>
            <% elsif attachment.video? %>
              <video controls width="480">
                <source src="<%= rails_blob_url(attachment) %>" type="<%= attachment.content_type %>"/>
              </video>
            <% else %>
              <%= link_to attachment.filename, rails_blob_path(attachment, disposition: "attachment"), class: "attachment-link" %>
            <% end %>
            <%= link_to "Delete attachment", purge_attachment_path(attachment), method: :delete, class: "action-link delete-link" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p>No images attached</p>
    <% end %>
  </div>

  <div class="post-detail">
    <strong>Content:</strong>
    <p><%= simple_format(@post.content) %></p>
  </div>

  <div class="post-actions">
    <%= link_to 'Edit', edit_post_path(@post), class: 'action-link edit-link' %> |
    <%= link_to 'Back', posts_path, class: 'action-link back-link' %>
  </div>
</div>

<style>
  .post-details-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .post-detail {
    margin-bottom: 20px;
  }

  .post-detail strong {
    display: block;
    font-size: 1.2em;
    color: #915387;
    margin-bottom: 5px;
  }

  .post-detail p {
    font-size: 1em;
    color: #14042b;
    margin: 0;
  }

  .avatar-section,
  .images-section {
    margin-top: 10px;
  }

  .avatar-image,
  .attachment-image {
    border-radius: 8px;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
  }

  .attachment {
    margin-bottom: 10px;
  }

  .action-link {
    display: inline-block;
    padding: 8px 16px;
    color: #ffffff;
    text-decoration: none;
    border-radius: 5px;
    font-size: 0.9em;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .delete-link {
    background-color: #f44336; /* Red for Delete */
  }

  .delete-link:hover {
    background-color: #d32f2f; /* Darker red on hover */
  }

  .edit-link {
    background-color: #2196f3; /* Blue for Edit */
  }

  .edit-link:hover {
    background-color: #1976d2; /* Darker blue on hover */
  }

  .back-link {
    background-color: #4a2a60; /* Darker shade for Back */
  }

  .back-link:hover {
    background-color: #915387; /* Original shade on hover */
  }
</style>
